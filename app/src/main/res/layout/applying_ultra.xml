<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#FFFFFF">


    <include
        layout="@layout/banner_layout"
        android:id="@+id/include3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <com.hookedonplay.decoviewlib.DecoView
        android:id="@+id/dynamicArcView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toBottomOf="@+id/include3"
        />

    <TextView
        android:id="@+id/completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0%"
        android:visibility="invisible"
        android:textColor="@color/green_color_active"
        android:textSize="36sp"
        wheel:layout_constraintBottom_toBottomOf="@+id/dynamicArcView2"
        wheel:layout_constraintEnd_toEndOf="@+id/dynamicArcView2"
        wheel:layout_constraintStart_toStartOf="@+id/dynamicArcView2"
        wheel:layout_constraintTop_toTopOf="@+id/dynamicArcView2"
        />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/abnb_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        wheel:layout_constraintBottom_toBottomOf="@+id/ist"
        wheel:layout_constraintEnd_toStartOf="@+id/ist"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="@+id/ist"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/abnb_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        wheel:layout_constraintBottom_toBottomOf="@+id/sec"
        wheel:layout_constraintEnd_toStartOf="@+id/sec"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="@+id/sec"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/abnb_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        wheel:layout_constraintBottom_toBottomOf="@+id/thi"
        wheel:layout_constraintEnd_toStartOf="@+id/thi"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="@+id/thi"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/abnb_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        wheel:layout_constraintBottom_toBottomOf="@+id/fou"
        wheel:layout_constraintEnd_toStartOf="@+id/fou"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="@+id/fou"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/abnb_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        wheel:layout_constraintBottom_toBottomOf="@+id/fif"
        wheel:layout_constraintEnd_toStartOf="@+id/fif"
        wheel:layout_constraintHorizontal_bias="0.0"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="@+id/fif"
        />
    <TextView
        android:id="@+id/ist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="48dp"
        android:text="@string/decreasing_brightness_upto_90"
        android:textColor="@color/green_color_inactive"
        android:textSize="16sp"
        android:textStyle="bold"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintHorizontal_bias="0.0"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toBottomOf="@+id/lottieAnimationView2"
        />
    <TextView
        android:id="@+id/sec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/decreasing_device_performance"
        android:textColor="@color/green_color_inactive"
        android:textSize="16sp"
        android:textStyle="bold"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintHorizontal_bias="0.0"
        wheel:layout_constraintStart_toStartOf="@+id/ist"
        wheel:layout_constraintTop_toBottomOf="@+id/ist"
        />
    <TextView
        android:id="@+id/thi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/closing_background_apps_and_services"
        android:textColor="@color/green_color_inactive"
        android:textSize="16sp"
        android:textStyle="bold"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintHorizontal_bias="0.04"
        wheel:layout_constraintStart_toStartOf="@+id/sec"
        wheel:layout_constraintTop_toBottomOf="@+id/sec"
        />
    <TextView
        android:id="@+id/fou"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/locking_acess_to_power_consuming_apps"
        android:textColor="@color/green_color_inactive"
        android:textSize="16sp"
        android:textStyle="bold"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintHorizontal_bias="0.0"
        wheel:layout_constraintStart_toStartOf="@+id/thi"
        wheel:layout_constraintTop_toBottomOf="@+id/thi"
        />

    <TextView
        android:id="@+id/fif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/closing_all_power_consuming_functions"
        android:textColor="@color/green_color_inactive"
        android:textSize="16sp"
        android:textStyle="bold"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintHorizontal_bias="0.0"
        wheel:layout_constraintStart_toStartOf="@+id/thi"
        wheel:layout_constraintTop_toBottomOf="@+id/fou"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toBottomOf="@+id/include3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>