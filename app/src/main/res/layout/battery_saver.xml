<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="170dp"
      android:layout_height="170dp"
      android:translationY="-50dp"
      android:elevation="1dp"
      app:layout_constraintBottom_toBottomOf="@+id/tvLevel"
      app:layout_constraintEnd_toEndOf="@+id/tvLevel"
      app:layout_constraintStart_toStartOf="@+id/tvLevel"
      app:layout_constraintTop_toTopOf="@+id/tvLevel"
      app:srcCompat="@drawable/shape_circle"
      />


  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toStartOf="@+id/imageView6"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView6"
      app:srcCompat="@drawable/btn_easy"
      />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:translationY="-120dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView3"
      app:layout_constraintEnd_toStartOf="@+id/imageView7"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/imageView3"
      app:layout_constraintTop_toTopOf="@+id/imageView3"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/btn_medium"
      />
  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:translationY="-120dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/imageView6"
      app:layout_constraintTop_toTopOf="@+id/imageView3"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/btn_hard"
      />

  <Space
      android:id="@+id/space"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
      />
  <TextView
      android:id="@+id/hourmain"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="8"
      android:textColor="#e56353"
      android:textSize="@dimen/_30sdp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toStartOf="@+id/textView4"
      app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
      />
  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" h"
      android:textColor="#e56353"
      android:textSize="@dimen/_24sdp"
      android:translationY="-120dp"
      app:layout_constraintBottom_toBottomOf="@+id/hourmain"
      app:layout_constraintEnd_toStartOf="@+id/space"
      app:layout_constraintTop_toTopOf="@+id/hourmain"
      />


  <TextView
      android:id="@+id/minutesmain"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="15"
      android:textColor="#e56353"
      android:textSize="@dimen/_30sdp"
      android:translationY="-120dp"
      app:layout_constraintBottom_toBottomOf="@+id/hourmain"
      app:layout_constraintStart_toEndOf="@+id/space"
      app:layout_constraintTop_toTopOf="@+id/hourmain"
      app:layout_constraintVertical_bias="0.0"
      />
  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" m"
      android:textColor="#e56353"
      android:textSize="@dimen/_24sdp"
      android:translationY="-120dp"
      app:layout_constraintBottom_toBottomOf="@+id/minutesmain"
      app:layout_constraintStart_toEndOf="@+id/minutesmain"
      app:layout_constraintTop_toTopOf="@+id/minutesmain"
      />
  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/charging_time_remaning"
      android:textSize="@dimen/_18sdp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/hourmain"
      />

  <TextView
      android:id="@+id/tvLevel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:elevation="3dp"
      android:text="30%"
      android:textColor="@color/btn_white"
      android:textSize="50sp"
      android:textStyle="bold"
      android:translationY="-50dp"
      app:layout_constraintBottom_toBottomOf="@+id/lottieAnimationView"
      app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView"
      app:layout_constraintStart_toStartOf="@+id/lottieAnimationView"
      app:layout_constraintTop_toTopOf="@+id/lottieAnimationView"
      />
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/lottieAnimationView"
      android:layout_width="400dp"
      android:layout_height="400dp"
      android:translationY="-50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:lottie_autoPlay="true"
      app:lottie_fileName="6624-moving-circles.json"
      app:lottie_loop="true"
      />
  <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Normal mode"
      android:textSize="14sp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toEndOf="@+id/imageView3"
      app:layout_constraintStart_toStartOf="@+id/imageView3"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      />
  <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Ultra mode"
      android:textSize="14sp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toEndOf="@+id/imageView6"
      app:layout_constraintStart_toStartOf="@+id/imageView6"
      app:layout_constraintTop_toBottomOf="@+id/imageView6"
      />

  <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Extreme mode"
      android:textSize="14sp"
      android:translationY="-120dp"
      app:layout_constraintEnd_toEndOf="@+id/imageView7"
      app:layout_constraintStart_toStartOf="@+id/imageView7"
      app:layout_constraintTop_toBottomOf="@+id/imageView7"
      />

</androidx.constraintlayout.widget.ConstraintLayout>